generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LandTaxReceipt {
  id                        String              @id @default(auto()) @map("_id") @db.ObjectId
  form_no                   Float?
  porishisht_no             Float?
  serial_number             Float?
  office_name               String?
  mouzaJL_no                String?
  upazila_thana             String?
  district_name             String?
  holding_no                String?
  khatian_no                String?
  net_jomir_poriman         Float?
  moreThenThreeYearBokoya   Float?
  lastThreeYearBokoya       Float?
  bokoyaJoriman             Float?
  halDabi                   Float?
  totalDabi                 Float?
  totalBokoya               Float?
  netTotal                  String?
  last_tax_payment_year     String?
  chalan_no                 String?
  bangla_date               String?
  eglish_date               String?
  owners                    Owner[]
  landDetails               LandDetail[]
  createdAt                 DateTime            @default(now())
}

type Owner {
  owner_name                String?
  owner_share               Float?
}

type LandDetail {
  land_sl                   Float?
  dag_no                    Float?
  jomir_type                String?
  jomir_poriman             Float?
}
